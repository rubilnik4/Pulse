{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"      
    }
  },
  "AllowedHosts": "*",

  "Workers": {
    "Overdue": {
      "Enabled": true,
      "PeriodSeconds": 60
    }
  },
  
  "Pagination": {
    "DefaultPage": 1,
    "DefaultSize": 20,
    "MaxSize": 100,
    "DefaultSort": "DueDateAsc"
  },
  
  "Postgres": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "postgres",
    "Username": "postgres",
    "Password": "postgres"
  },
  "Cache": { "RatesTtlSeconds": 300 }
}
